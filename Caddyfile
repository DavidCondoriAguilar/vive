# Caddy Server Configuration - Para servidores con Caddy
# Ubicación: /etc/caddy/Caddyfile

tu-dominio.com {
    root * /var/www/tu-proyecto/dist  # Ajusta esta ruta
    
    # SPA Fallback - Intenta servir archivo, si no existe sirve index.html
    try_files {path} {path}/ /index.html
    
    # Headers de seguridad
    header {
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Cache para assets estáticos
        Cache-Control "public, max-age=31536000, immutable"
    }
    
    # Match para archivos estáticos
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.webp *.svg *.ico *.woff *.woff2
    }
    
    # Headers específicos para archivos estáticos
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Gzip compression
    encode gzip
    
    # HTTPS automático con Let's Encrypt
    tls {
        protocols tls1.2 tls1.3
    }
    
    # Log de acceso
    log {
        output file /var/log/caddy/tu-dominio.com.log
        format single_field common_log
    }
}

# Configuración para www -> non-www
www.tu-dominio.com {
    redir https://tu-dominio.com{uri}
}
